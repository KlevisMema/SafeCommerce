<MudDialog>
    <TitleContent>
        <MudText Typo="Typo.h6">
            <MudIcon Icon="@Icons.Material.Filled.Edit" Class="mr-3 mb-n1" />
            Delete Item
        </MudText>
    </TitleContent>
    <DialogContent>
        Are you sure you want to delete this item?
    </DialogContent>
    <DialogActions>
        <MudButton Disabled="_processing" Style="@($"background:{Colors.Cyan.Darken3};")" ButtonType="ButtonType.Submit" Variant="Variant.Filled" OnClick="OnDeleteShop">
            @if (_processing)
            {
                <MudProgressCircular Class="ms-n1" Size="MudBlazor.Size.Small" Indeterminate="true" Style="@($"color:{Colors.Cyan.Darken3};")" />
                <MudText Class="ms-2" Style="@($"color:{Colors.Cyan.Darken3};")">Deleting</MudText>
            }
            else
            {
                <MudText Style="@($"color:white;")">Delete</MudText>
            }
        </MudButton>
    </DialogActions>
</MudDialog>